-# <サイドバー>
.Side-bar
  .Side-bar__user-name
    .Top-items
      .Top-items__name
        = current_user.name
      %ul.Top-items__icons
        %li
          = link_to new_group_path do
            = icon('far', 'edit', class:"icon")
        %li
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class:"icon")
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Chat-group
        = link_to group_messages_path(group), class:'Chat-group__a' do
          .Chat-group__name
            = group.name
          .Chat-group__message
            = group.show_last_message
